---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Försäkringsspecialisterna | Hem">
  <main>
    <div class="generalInfo">
      <!-- <img class="umeaPicture" src="cityview-umea.png" /> -->
      <h1>Försäkringsspecialisterna</h1>
      <ul class="list">
        <li>Företagsförsäkringar</li>
        <li>Transportförsäkringar</li>
        <li>Kreditförsäkringar</li>
        <li>Tjänstepensioner</li>
        <li>Utländska försäkringar</li>
        <li>Kapitalplaceringar</li>
        <li>Sjukförsäkringar</li>
        <li>Sjuk/Olycksfallsförsäkringar för barn och ungdom</li>
        <li>Privata pensionsförsäkringar</li>
      </ul>
    </div>
    <div class="partners">
      <!--
				Partners
			 -->
      <hr />
      <h3>Samarbetspartners</h3>

      <div class="partnersWrapper">
        <div id="partnersList">
          <img class="companyPicture" src="company_pictures/åland.jpg" />
          <img class="companyPicture" src="company_pictures/alandia.jpg" />
          <img class="companyPicture" src="company_pictures/chartis.jpg" />
          <img class="companyPicture" src="company_pictures/chubb.jpg" />
          <img
            class="companyPicture"
            src="company_pictures/dinaförsäkringar.jpg"
          />
          <img class="companyPicture" src="company_pictures/erv.jpg" />
          <img class="companyPicture" src="company_pictures/euro.jpg" />
          <img class="companyPicture" src="company_pictures/folksam.jpg" />
          <img class="companyPicture" src="company_pictures/gjen.jpg" />
          <img class="companyPicture" src="company_pictures/gouda.jpg" />
          <img class="companyPicture" src="company_pictures/if.jpg" />
          <img
            class="companyPicture"
            src="company_pictures/länsförsäkringar.jpg"
          />
          <img class="companyPicture" src="company_pictures/moderna.jpg" />
          <img class="companyPicture" src="company_pictures/movestic.jpg" />
          <img class="companyPicture" src="company_pictures/npg.jpg" />
          <img class="companyPicture" src="company_pictures/salu.jpg" />
          <img class="companyPicture" src="company_pictures/seb.jpg" />
          <img class="companyPicture" src="company_pictures/skandia.jpg" />
          <img class="companyPicture" src="company_pictures/svedea.jpg" />
          <img class="companyPicture" src="company_pictures/trygghansa.jpg" />
          <img class="companyPicture" src="company_pictures/zurich.jpg" />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    justify-items: center;
  }

  .partners {
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .umeaPicture {
    z-index: -1;
    position: absolute;
    max-width: 40rem;
    opacity: 30%;
    left: 5vh;
    right: 0;
    margin-left: auto;
    margin-right: auto;
  }

  .generalInfo {
    margin-bottom: 10vh;
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    justify-items: center;
  }

  .list {
    list-style-type: none;
    color: #444444;
    padding: 0;
  }

  .list > li {
    padding: 0.2vh;
  }
  @media screen and (min-width: 993px) {
    h1 {
      font-size: 3rem;
      font-weight: 500;
      margin: 0;
    }

    .companyPicture {
      max-width: 10rem;
    }

    h3 {
      font-size: 1rem;
      font-weight: 400;
      margin: 3vh;
    }
    #partnersList {
      list-style: none;
      display: flex;
      gap: 0.5vh;
      margin-bottom: 1vh;
    }

    .partnersWrapper {
      max-width: 25%;
      overflow-x: scroll;
      white-space: nowrap;
    }
    hr {
      width: 70ch;
    }
  }
  @media screen and (max-width: 992px) {
    h1 {
      font-size: 2rem;
      font-weight: 500;
      margin: 0;
    }

    hr {
      width: 30ch;
    }

    h3 {
      font-size: 1rem;
      font-weight: 400;
      margin: 3vh;
    }

    .companyPicture {
      max-width: 100%;
    }
    #partnersList {
      list-style: none;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(20ch, 1fr));
      gap: 1rem;
    }

    .partnersWrapper {
      display: block;
      width: 100%;
      overflow-y: hidden;
      white-space: nowrap;
      padding: 3vh;
      margin-bottom: 3vh;
    }
  }
  @media screen and (max-width: 992px) {
    h1 {
      font-size: 1.5rem;
      font-weight: 500;
      margin: 0;
    }
  }
</style>
